generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  records   Record[]
  createdAt DateTime @default(now())
}

model Record {
  id        String   @id @default(uuid())
  title     String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  bills     Bill[]
  createdAt DateTime @default(now())
  netAmount Int
  lastEdited DateTime
  description String?
}

model Bill {
  id          String   @id @default(uuid())
  name        String
  amount      Int
  record      Record   @relation(fields: [recordId], references: [id])
  recordId    String
  createdAt   DateTime @default(now())
  description String?
}
